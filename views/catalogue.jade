extends layout

block content

	h2 Liste des services

	if services
		p
			table
				thead
					tr
						th Identifiant
						th Titre
						th Type
						th Date de publication
						
				tbody
				- each service in services
					tr
						td #{service.id}
						td 
							a(href='/services/'+service.id) #{service.title}
						if service.type == 'request'
							td demande
						else
							td offre
						td #{service.creation_date}
				tbody