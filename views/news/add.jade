extends ../layout

block content

	a(href='/administration') Retour
	
	h2 Création d'une nouvelle
	p 
		form(method='post', action='/news/new', id='add-news-form')
			.form-group
				label(for='title') Le titre
				input(type='text', name='title', class='form-control', id='title', placeholder='Entrez le titre de votre nouvelle')
			.form-group
				label(for='password') Le contenu
				textarea(name='content', class='form-control', id='content', placeholder='Entrez le contenu de votre nouvelle')
			.form-group
				button.btn.btn-default Créer la nouvelle