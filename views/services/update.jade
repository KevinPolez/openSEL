extends ../layout

block content

	a(href='/account') Retour
	
	h2 Modification d'un service
	p 
		form(method='post', action='/services/'+service.id+'/update', id='update-service-form')
			.form-group
				label(for='title') Le titre
				input(type='text', value=service.title, name='title', class='form-control', id='title', placeholder='Entrez le titre de votre service')
			.form-group
				label(for='description') La description
				textarea(name='description', class='form-control', id='description', placeholder='Entrez la description de votre service') #{service.description}
					
			.form-group
				label(for='type') Le type
				select(name='type')
					if service.type == 'request'
						option(value="request", selected="true") Demande
						option(value="offer") Offre
					else
						option(value="request") Demande
						option(value="offer", selected="true") Offre
			.form-group
				button.btn.btn-default Modifier le service
			div(id="space")