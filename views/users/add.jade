extends ../layout

block content

	a(href='/administration') Retour
	
	h2 Création d'un nouvel utilisateur
	p 
		form(method='post', action='/users/add', id='add-user-form')
			.form-group
				label(for='type') Le rôle
				select(name='type')
					option(value="user", selected="true") Utilisateur
					option(value="admin") Administrateur
			.form-group
				label(for='username') Nom d'utilisateur
				input(type='text', name='username', class='form-control', id='username', placeholder='Entrez le nom d\'utilisateur')
			.form-group
				label(for='password') Mot de passe
				input(type='text', name='password', class='form-control', id='password', placeholder='Entrez le mot de passe')
			.form-group
				button.btn.btn-default Créer l'utilisateur