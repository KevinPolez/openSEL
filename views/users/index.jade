extends ../layout

block content

	a(href='/administration') Retour

	h2 Liste des utilisateurs
	a(href="/users/add") Ajouter un utilisateur
	if users
		p
			table
				thead
					tr
						th Identifiant
						th Nom d'utilisateur
						th Date de création
						th Action
				tbody
				- each user in users
					tr
						td #{user.id}
						td #{user.username}
						td #{user.creation_date}
						td
							a(href='/users/'+ user.id + '/update') Modifier&nbsp;
							a(href='/users/'+ user.id + '/delete') Supprimer