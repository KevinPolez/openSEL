extends ../layout

block content

	a(href='/administration') Retour
	
	h2 Modification d'un utilisateur
	p 
		form(method='post', action='/users/' + user_id + '/update', id='update-user-form')
			.form-group
				label(for='username') Nom d'utilisateur
				input(type='text', value=user.name, name='username', class='form-control', id='username', placeholder='Entrez le nom d\'utilisateur')
			.form-group
				label(for='password') Mot de passe
				input(type='text', name='password', class='form-control', id='password', placeholder='Entrez le mot de passe')
			.form-group
				button.btn.btn-default Modifier l'utilisateur